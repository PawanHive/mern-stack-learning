<%- include("includes/head.ejs")  %>
<body>
    <h2>This pages belongs to @ <%= data.name %></h2>
    <button>Follow</button>
    <button>Message</button>

    <p>Followers: <%= data.followers  %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; following: <%= data.following  %></p>                   <%# here '&nbsp' = non-breaking space..... used to create space between 'Followers' and 'Following' in the same line %>

    <hr>

    <% for(let post of data.posts) { %>
        <img src="<%= post.image %>" alt="some image">

    <p>Likes: <%= post.likes  %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Comments: <%= post.comments  %></p>                   

    <% } %>



    <%- include("includes/footer.ejs") %>
    <script src="/script.js"></script>
</body>
</html>